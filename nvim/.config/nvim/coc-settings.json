{
  "eslint.autoFixOnSave": false,
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "highlight.colorNames.enable": false,
  "colors.filetypes": ["*"],
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
